{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "securityDefinitions": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "scheme": "bearer",
        "in": "header",
        "description": "The token for authentication"
      },
      "security": [
        {
          "bearerAuth": []
        }
      ]
    }
  },
  "ignore": [
    "**/node_modules/**"
  ]
}